# Portfolix Compass Backend - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ============================================
# Database Configuration (MongoDB)
# ==============================================
MONGODB_URI=mongodb://localhost:27017/portfolix#
# Authentication & Security
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10

# ============================================
# Data Encryption (for sensitive fields)
# ============================================
ENCRYPTION_KEY=your_encryption_key_in_hex_format_32_chars_min

# ============================================
# AWS S3 Configuration (for file uploads)
# ============================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=portfolix-documents

# ============================================
# Email Service (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@portfolix.in
EMAIL_FROM_NAME=Portfolix Compass

# ============================================
# Redis Configuration (optional, for caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================
# PDF Generation (Puppeteer)
# ============================================
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=

# ============================================
# Monitoring & Logging
# ============================================
SENTRY_DSN=
LOG_LEVEL=info

# ============================================
# Frontend URLs (for CORS)
# ============================================
FRONTEND_URL=http://localhost:8080
FRONTEND_PROD_URL=https://app.portfolix.in

# ============================================
# Business Configuration
# ============================================
DEFAULT_HRA_PERCENTAGE=30
DEFAULT_DA_PERCENTAGE=8
DEFAULT_PF_PERCENTAGE=12
DEFAULT_ESI_PERCENTAGE=0.75
DEFAULT_COMPLIANCE_REGION=Kerala

# ============================================
# External APIs & Integrations
# ============================================
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_SECRET_KEY=
DOCUSIGN_ACCOUNT_ID=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# ============================================
# Feature Flags
# ============================================
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SALARY_ADVANCE=false
ENABLE_REFERRAL_BONUS=true
