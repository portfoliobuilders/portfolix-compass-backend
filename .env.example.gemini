# ============================================================================
# PORTFOLIX COMPASS - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values
# CRITICAL: Never commit .env file to version control
# ============================================================================

# ============================================================================
# 1. GOOGLE GEMINI API CONFIGURATION
# ============================================================================
# Get your API key from: https://aistudio.google.com/api-keys
GEMINI_API_KEY=your_actual_api_key_here
GEMINI_MODEL=gemini-pro

# ============================================================================
# 2. CACHE CONFIGURATION
# ============================================================================
# TTL in seconds (900 = 15 minutes)
CACHE_TTL=900
CACHE_ENABLED=true

# ============================================================================
# 3. AI/ML SERVICE CONFIGURATION
# ============================================================================
AIML_MAX_TOKENS=2048
AIML_TEMPERATURE=0.7
AIML_LOG_LEVEL=info
AIML_TIMEOUT=30000

# ============================================================================
# 4. DATABASE CONFIGURATION (EXISTING)
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/portfolix-compass
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_mongo_password

# ============================================================================
# 5. SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ============================================================================
# 6. JWT & AUTHENTICATION
# ============================================================================
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRATION=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# ============================================================================
# 7. CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ============================================================================
# 8. LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILE_SIZE=10m
LOG_MAX_FILES=30

# ============================================================================
# 9. EMAIL CONFIGURATION (FOR DOCUMENT DELIVERY)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@portfolixcompass.com

# ============================================================================
# 10. RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AIML_RATE_LIMIT_MAX=20

# ============================================================================
# 11. REDIS CONFIGURATION (OPTIONAL - FOR PRODUCTION)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================================================
# 12. FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xlsx,csv
UPLOAD_DIR=./uploads

# ============================================================================
# 13. PRODUCTION DEPLOYMENT (OPTIONAL)
# ============================================================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# ============================================================================
# 14. MONITORING & ANALYTICS (OPTIONAL)
# ============================================================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ============================================================================
# 15. FEATURE FLAGS
# ============================================================================
ENABLE_AIML_FEATURES=true
ENABLE_BULK_OPERATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_COMPLIANCE_CHECKER=true

# ============================================================================
# NOTES FOR DEVELOPMENT SETUP:
# ============================================================================
# 1. Replace 'your_actual_api_key_here' with your Gemini API key
# 2. For local development, MongoDB can run on localhost:27017
# 3. Generate JWT_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 4. Keep .env file secure and never commit to version control
# 5. Different .env files for development, staging, and production
# 6. Use .env.example as a template for team members
# 7. Document any new environment variables for team members
