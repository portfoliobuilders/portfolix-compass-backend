# Portfolix Compass Backend - Environment Configuration
# This file should NEVER be committed to version control
# Copy to .env.local and update with your actual values

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
# MongoDB connection string - REQUIRED
# Local MongoDB: mongodb://localhost:27017/portfolix-compass
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/portfolix-compass?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/portfolix-compass
MONGODB_DB_NAME=portfolix-compass

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_FORMAT=json
LOG_OUTPUT=console

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CACHE=true

# Redis Cache (if needed)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External Service URLs
# For third-party integrations
EXTERNAL_API_TIMEOUT=30000
