# ========== ERM SYSTEM CONFIGURATION ==========

# ========== DATABASE CONFIGURATION ==========
DATABASE_URL=postgresql://user:password@localhost:5432/portfolix_erm_db
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# ========== COMPASS API INTEGRATION ==========
COMPASS_API_URL=http://localhost:3001
COMPASS_API_KEY=your_compass_api_key_here
COMPASS_API_TIMEOUT=30000

# ========== ERM SYNC CONFIGURATION ==========
ERM_SYNC_ENABLED=true
ERM_SYNC_INTERVAL=300000
ERM_SYNC_BATCH_SIZE=100
ERM_SYNC_RETRY_ATTEMPTS=3
ERM_SYNC_RETRY_DELAY=5000

# ========== ATTENDANCE SETTINGS ==========
ATTENDANCE_WORKING_HOURS=8
ATTENDANCE_BREAK_DURATION=60
ATTENDANCE_SYNC_DIRECTION=bidirectional
ATTENDANCE_AUTO_CHECKOUT_TIME=18:00

# ========== TASK MANAGEMENT SETTINGS ==========
TASK_PRIORITY_LEVELS=high,medium,low
TASK_STATUS_WORKFLOW=open,in_progress,completed,on_hold,cancelled
TASK_SYNC_DIRECTION=bidirectional
TASK_OVERDUE_NOTIFICATION_ENABLED=true
TASK_OVERDUE_CHECK_INTERVAL=3600000

# ========== LEAVE MANAGEMENT SETTINGS ==========
LEAVE_ANNUAL_QUOTA=20
LEAVE_TYPES=annual,sick,personal,maternity,sabbatical
LEAVE_APPROVAL_REQUIRED=true
LEAVE_SYNC_DIRECTION=bidirectional
LEAVE_AUTO_CALCULATE_BALANCE=true

# ========== WEBHOOK CONFIGURATION ==========
WEBHOOK_ENABLED=true
WEBHOOK_RETRY_ENABLED=true
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=10000
WEBHOOK_TIMEOUT=30000
WEBHOOK_SECRET=your_webhook_secret_key_here

# ========== LOGGING CONFIGURATION ==========
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ERM_SYNC=true
LOG_WEBHOOK_EVENTS=true
LOG_DATABASE_QUERIES=false

# ========== CACHE CONFIGURATION ==========
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_DB=1
REDIS_CACHE_TTL=3600
ERM_SYNC_CACHE_TTL=1800

# ========== NOTIFICATION SETTINGS ==========
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK=
NOTIFICATION_SEND_ON_SYNC_FAILURE=true

# ========== RATE LIMITING ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========== SECURITY SETTINGS ==========
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========== FEATURE FLAGS ==========
FEATURE_REAL_TIME_SYNC=true
FEATURE_BATCH_SYNC=true
FEATURE_WEBHOOK_SYNC=true
FEATURE_ATTENDANCE_MANUAL_CORRECTION=true
FEATURE_LEAVE_AUTO_BALANCE_CALCULATION=true

# ========== TESTING/DEBUG ==========
NODE_ENV=development
DEBUG_MODE=false
DEBUG_ERM_SYNC=false
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/portfolix_erm_test_db
