# Portfolix Compass Backend - Development Environment Configuration
# This file is for LOCAL DEVELOPMENT ONLY
# DO NOT commit real credentials to version control
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# ============================================
# Database Configuration (MongoDB)
# ============================================
# For development, use MongoDB Atlas cloud database or local MongoDB
MONGODB_URI=mongodb://localhost:27017/portfolix-compass
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/portfolix-compass?retryWrites=true&w=majority

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=dev_jwt_secret_change_in_production_12345
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10

# ============================================
# Redis Configuration (For Caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================
# Email Service (SendGrid)
# ============================================
SENDGRID_API_KEY=SG.test_key_for_development
EMAIL_FROM=noreply@portfolix.local
EMAIL_FROM_NAME=Portfolix Compass Dev

# ============================================
# AWS S3 Configuration (Optional for development)
# ============================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_BUCKET_NAME=portfolix-dev-documents

# ============================================
# PDF Generation (Puppeteer)
# ============================================
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=

# ============================================
# Monitoring & Logging
# ============================================
SENTRY_DSN=
LOG_LEVEL=debug

# ============================================
# Frontend URLs (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_DEV_URL=http://localhost:3000
FRONTEND_PROD_URL=https://app.portfolix.in

# ============================================
# Business Configuration
# ============================================
DEFAULT_HRA_PERCENTAGE=30
DEFAULT_DA_PERCENTAGE=8
DEFAULT_PF_PERCENTAGE=12
DEFAULT_ESI_PERCENTAGE=0.75
DEFAULT_COMPLIANCE_REGION=Kerala

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=dev_session_secret_key_12345
SESSION_TIMEOUT=3600000

# ============================================
# Feature Flags
# ============================================
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SALARY_ADVANCE=false
ENABLE_REFERRAL_BONUS=true
ENABLE_DEBUG_MODE=true

# ============================================
# External API Integrations
# ============================================
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_SECRET_KEY=
DOCUSIGN_ACCOUNT_ID=
